<div>
  <h4>Registro de personal</h4>
  <% logger.debug "DEBUG: #{resource.inspect}" %>
   <% logger.debug "RESOURCE: #{resource}" %>
   <% logger.debug "el name: #{resource_name}" %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :Email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :Constraseña %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres como mínimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label "Confirmación de contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :Nombre %><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :Apellido %><br />
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :Numero_de_telefono %><br />
      <%= f.number_field :phone %>
    </div>

    <div class="field">
      <%= f.label :fecha_de_nacimiento %><br />
      <%= f.date_field :birth_date %>
    </div>
    <div><br/><div>

    <div class="field">
      <%= f.label "Es administrador", sytle:"margin-right:2px" %>
      <%= f.check_box :is_admin, style:"margin-top:2px" %>
    </div>

    <hr>

    <div class="actions">
      <%= f.submit "Registrar", class:"btn btn-info p-2" %>
    </div>
  <% end %>
</div>
