<table class="table text-center mt-3">
  <thead>
    <tr>
      <th scope="col" style="color: green">Última carga</th>
      <th scope="col" style="color: red">Último gasto</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td style="color: green">
        $ <%= @wallet.ultima_carga %>
